<%
function formatDate(date) {
  if (date == null)
  {
    return "";
  } else {
    var date = new Date(date);
    var d = date.getDate();
    var m = date.getMonth() + 1;
    var y = date.getFullYear();
    return y + '/' + m + '/' + d;
  }
}
%>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <%- include layout/head %>
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

    </head>

    <body>
        <%- include layout/nav %>
            <div class="containner">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Latest Post
                                <div style="float:right; font-size: 100%; position: relative; top: -8px;">
                                    <a href="admin/post/new" class="btn btn-success">
                                        <span class="glyphicon glyphicon-circle-arrow-right
                                        "></span>
                                        New Post
                                        <span class="glyphicon glyphicon-hand-right"></span>
                                    </a>
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" id="post-table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Title</th>
                                                <th>Content</th>
                                                <th>Author</th>
                                                <th>Create_at</th>
                                                <th>Update_at</th>
                                                <th style="width: 115px;">Options</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(data && data.posts){%>
                                                <%data.posts.forEach(aa=>{%>
                                                    <tr>
                                                        <td>
                                                            <%=aa.id%>
                                                        </td>
                                                        <td>
                                                            <%=aa.title%>
                                                        </td>
                                                        <td>
                                                            <%=aa.content%>
                                                        </td>
                                                        <td>
                                                            <%=aa.author%>
                                                        </td>
                                                        <td>
                                                            <%=formatDate(aa.create_at)%>
                                                        </td>
                                                        <td>
                                                            <%=formatDate(aa.update_at)%>
                                                        </td>
                                                        <td>
                                                            <a href="admin/post/edit/<%=aa.id%>" class="btn btn-success">Edit</a>
                                                            <button class="btn btn-danger btn-delete" post_id=<%=aa.id%> >Delete</button>
                                                        </td>
                                                    </tr>
                                                    <%})%>
                                                        <%}%>

                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                    </div>
                </div>
            </div>
    </body>

    <%- include layout/footer %>

    </html>